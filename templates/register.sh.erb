# FILE MANAGED BY PUPPET
LOGIN=admin
PASSWORD=exp_5cC5
CENTREON_URL=<%= @centreon_webapi_host %>:<%= @centreon_webapi_port %>
HOST_IP=<%= @ipaddress %>
HOST_ALIAS=<%= @host_alias %>
HOST_TEMPLATE=<%= @host_template %>
INSTANCE_NAME=<%= @host_pooler %>
HOST_NAME=<%= @hostname %>
MACRO_NAME=INTERFACE
MACRO_VALUE=<%= @networking.primary %>


# GET TOKEN
TOKEN=$(curl -s \
-d "username=${LOGIN}&password=${PASSWORD}" \
-H "Content-Type: application/x-www-form-urlencoded" \
-X POST ${CENTREON_URL}/centreon/api/index.php?action=authenticate | sed -e 's/^{"authToken":"//' -e 's/"}$//')

# CHECK IF HOST EXIST
CHECK_CENTREON=$(curl -s "${CENTREON_URL}/centreon/api/index.php?action=action&object=centreon_clapi" \
-H 'Content-Type: application/json' \
-H "centreon-auth-token: $TOKEN" \
--data '{"action":"show", "object":"host"}' | grep -q ${HOSTNAME};echo $?)

#if [ $CHECK_CENTREON == 0 ];
#then
#   # host already present in centreon so we quit
#   exit 0
#fi

# ADD HOST
curl -s "${CENTREON_URL}/centreon/api/index.php?action=action&object=centreon_clapi" \
-H 'Content-Type: application/json' \
-H "centreon-auth-token: $TOKEN" \
--data "{\"action\":\"add\", \"object\":\"host\", \"values\":\""${HOST_NAME}";"${HOST_ALIAS}";"${HOST_IP}";"${HOST_TEMPLATE}";"${INSTANCE_NAME}";\"}"

# Apply template
curl -s "${CENTREON_URL}/centreon/api/index.php?action=action&object=centreon_clapi" \
-H 'Content-Type: application/json' \
-H "centreon-auth-token: $TOKEN" \
--data "{\"action\":\"applytpl\", \"object\":\"host\", \"values\":\""${HOST_NAME}"\"}"

# SET MACRO

curl -s "${CENTREON_URL}/centreon/api/index.php?action=action&object=centreon_clapi" \
-H 'Content-Type: application/json' \
-H "centreon-auth-token: $TOKEN" \
--data "{\"action\":\"setmacro\", \"object\":\"host\", \"values\":\""${HOST_NAME}";"${MACRO_NAME}";"${MACRO_VALUE}";"${MACRO_PASSWORD}";"${MACRO_DESC}";\"}"

# APPLY CONF

curl -s "${CENTREON_URL}/centreon/api/index.php?action=action&object=centreon_clapi" \
-H 'Content-Type: application/json' \
-H "centreon-auth-token: $TOKEN" \
--data "{\"action\":\"applycfg\",  \"values\":\""${INSTANCE_NAME}"\"}"
